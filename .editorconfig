root = true

[*]
end_of_line = lf
trim_trailing_whitespace = false
insert_final_newline = true

[*.{md,mdx,json,toml,yml,yaml,sh}]
indent_style = space
trim_trailing_whitespace = false
indent_size = 2
charset = utf-8

[*.{ts,tsx,js,jsx}]
indent_style = space
trim_trailing_whitespace = true
indent_size = 2
charset = utf-8

[CHANGELOG.md]
indent_size = false
